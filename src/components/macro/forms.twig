<!-- Input -->

{% macro input(label,  value='', type='text', placeholder='') %}
<div>
    <label class="form-label">{{ label }}</label>
    <input type="{{ type }}" class="form-control" value="{{ value | escape }}" placeholder="{{ placeholder | escape }}">
</div>
{% endmacro %}


<!-- Textarea -->

{% macro textarea(label) %}
<div>
    <label class="form-label">{{ label }}</label>
    <textarea class="form-control" rows="4"></textarea>
</div>
{% endmacro %}


<!-- Checkbox -->

{% macro checkbox(label) %}
<div class="form-check">
    <input class="form-check-input" type="checkbox" value="" id="check_{{ label }}" name="check_{{ label }}">
    <label class="form-check-label" for="check_{{ label }}">
        {{ label }}
    </label>
</div>
{% endmacro %}


<!-- Radio -->

{% macro radio(label, name) %}
<div class="form-check">
    <input class="form-check-input" type="radio" value="" id="check_{{ label }}" name="check_{{ name }}">
    <label class="form-check-label" for="check_{{ label }}">
        {{ label }}
    </label>
</div>
{% endmacro %}
