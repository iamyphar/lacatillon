{% extends '@layouts/layout-default.twig' %}

{% block content %}

    <div class="d-grid gap-5">
        {% include '@components/hero.twig' %}
        {% include '@components/alert.twig' %}
        {% include '@components/fancy-links.twig' %}
        {% include '@components/exemple-macros.twig' %}
